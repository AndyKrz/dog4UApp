<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ui.home.HomeFragment">

    <Button
            android:id="@+id/button_home"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@android:string/search_go"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="120dp"/>
    <TextView
            android:text="@string/find_your_perfect_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="136dp" android:textSize="24sp"
            android:textColor="@color/design_default_color_surface"/>
</androidx.constraintlayout.widget.ConstraintLayout>